package com.crafter6464.endercraft.configuration;

import java.io.File;

import net.minecraftforge.common.config.Configuration;

public class ConfigurationHandler {
	public static boolean test;
	public static void init(File file){
		Configuration config = new Configuration(file);
		
		try
		{
		
			config.load();
			
			test = config.get("General", "Test", true, "this is a test boolean").getBoolean();
		}
		catch(Exception e)
		{
			
			e.printStackTrace();
			
		}
		finally
		{
			
			config.save();
			System.out.println("Config value: "+ test);
		}
		
	}
	
}
